{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "dist",
      "module": "commonjs",
      "target": "es6",
      "lib": [
        "es6",
        "es2016"
      ],
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*"
    ]
  }
